{
    "manifest_version": 2,
    "name": "Messanger",
    "version": "1.0.0",
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "background": {
        "page": "background.html"
        //"persistent": true
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "index.html"
    },
    "permissions": [ 
        "tabs",
        "storage", 
        "management", 
        "notifications", 
        "http://vk.com/*", 
        "http://*.vk.me/*", 
        "https://api.vk.com/method/*" ]
}