{
    "manifest_version": 2,
    "name": "Messanger",
    "version": "1.0.0",
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "options_page": "app.options/options.html",
    "background": {
        "page": "background.html"
    },
    "browser_action": {
        "default_icon": "icons/icon.png",
        "default_popup": "index.html"
    },
    "permissions": [ 
        "tabs",
        "storage", 
        "management", 
        "notifications",
        "storage", 
        "http://vk.com/*", 
        "http://*.vk.me/*", 
        "https://api.vk.com/method/*",
        "http://imv4.vk.com/*",
        "http://*.vk.com/*"]
}