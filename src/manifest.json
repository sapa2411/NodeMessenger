{
    "manifest_version": 2,
    "name": "__MSG_appName__",
    "description": "__MSG_appDesc__",
    "default_locale": "ru",
    "version": "1.0.1",
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "options_page": "app.options/options.html",
    "background": {
        "page": "background.html"
    },
    "browser_action": {
        "default_icon": "icons/VK_icon.png",
        "default_popup": "index.html"
    },
    "icons":
    {
        "128": "icons/VK_icon.png",
        "64": "icons/VK_icon.png",
        "16": "icons/VK_icon.png",
        "48": "icons/VK_icon.png"
    },
    // "content_scripts": [{
    //     "matches": ["<all_urls>", "http://*/*", "https://*/*"],
    //     "css": ["app.pagecontent/iframe.css"],
    //     "js": ["app.pagecontent/fastresponse.js"]
    // }],
    // "web_accessible_resources" : [
    //     "app.pagecontent/notification.html",
    //     "app.pagecontent/notification.css",
    //     "icons/im_actions.png"],
    "permissions": [
        "tabs",
        "storage",
        "management",
        "notifications",
        "storage",
        "http://vk.com/*",
        "http://*.vk.me/*",
        "https://api.vk.com/method/*",
        "http://imv4.vk.com/*",
        "http://*.vk.com/*"]
}